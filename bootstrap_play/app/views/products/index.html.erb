<div class="container">
<h1>Listing Products in database</h1>
 
<%= link_to 'Products', controller: 'products'%>
<%= link_to 'New Product', new_product_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.text %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
    </tr>
  <% end %>
</table>

<p><%= Product.find(1).text %> </p>

</div>